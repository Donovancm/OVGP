@page
@model IndexModel

@{
    ViewData["Title"] = "Adminbeheer";
}

@if (User.IsInRole("Beheerder"))
{
    <h4>Administrator pagina</h4>
    <form>
        <button class="btn btn-primary" asp-area="Identity" asp-page="/Account/register" title="Manage" style="margin-top:10px;margin-bottom:20px;">Register een nieuwe gebruiker</button>
    </form>
}


@{int i = 0;}
<!-- Card -->
<!--Accordion wrapper-->
<div class="accordion md-accordion accordion-1" id="accordionEx23" role="tablist">
    @foreach (var item in Model.User)
    {
        <div class="card">
            <a class="white-text font-weight-bold" data-toggle="collapse" href="#collapse_@i" aria-expanded="true"
               aria-controls="collapse_@i">
                <div class="card-header blue lighten-3 z-depth-1" role="tab" id="heading_@i">
                    <i class="fas fa-user fa-2x float-left black-text" aria-hidden="true" style="margin-right:20px"></i>
                    <h4>@Html.DisplayFor(modelItem => item.UserName)</h4>
                </div>
            </a>
            <div id="collapse_@i" class="collapse" role="tabpanel" aria-labelledby="heading_@i"
                 data-parent="#accordionEx23">
                <div class="card-body">
                    <div class="row my-4">
                        <div class="col-md-8 test">
                            <p><strong>Bedrijfsnaam: </strong>@Html.DisplayFor(modelItem => item.Bedrijf)</p>
                            <p><strong>KvK Nummer: </strong>@Html.DisplayFor(modelItem => item.KvKnummer)</p>
                            <p><strong>Contactpersoon: </strong>@Html.DisplayFor(modelItem => item.ContactPersoon)</p>
                            <p><strong>Adres: </strong>@Html.DisplayFor(modelItem => item.Adres)</p>
                            <p><strong>Postcode: </strong>@Html.DisplayFor(modelItem => item.Postcode)</p>
                            <p><strong>Plaats: </strong>@Html.DisplayFor(modelItem => item.Plaats)</p>
                            <p><strong>Email: </strong>@Html.DisplayFor(modelItem => item.Email)</p>
                            <p><strong>Telefoonnummer: </strong>@Html.DisplayFor(modelItem => item.PhoneNumber)</p>
                            <p><strong>Contributiebetaald: </strong>@Html.DisplayFor(modelItem => item.ContributieBetaald)</p>
                            <p><strong>Betaaldatum: </strong>@Html.DisplayFor(modelItem => item.Betaaldatum)</p>
                            <p><strong>Vorige betaaldatum: </strong>@Html.DisplayFor(modelItem => item.VorigeBetaalDatum)</p>
                            <p><strong>Betaald bedrag: </strong>€@Html.DisplayFor(modelItem => item.BetaalBedrag)</p>
                            <p><strong>Nog te betalen: </strong>€@Html.DisplayFor(modelItem => item.BedragTeVoldoen)</p>
                            <form>
                                <button class="btn btn-grey m-right btn-sm" style="margin-top: 4px;" asp-page="./Edit" asp-route-id="@item.Id">Edit</button>
                                <button class="btn btn-grey m-right btn-sm" style="margin-top: 4px;" asp-page="./Delete" asp-route-id="@item.Id">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        i++;
    }
</div>