@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>

    h3 {
        color: #00BDF3;
    }
</style>
<h3>Maak een nieuwe account aan</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Bedrijf">Bedrijfsnaam</label>
                <input asp-for="Input.Bedrijf" class="form-control" />
                <span asp-validation-for="Input.Bedrijf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ContactPersoon"></label>
                <input asp-for="Input.ContactPersoon" class="form-control" />
                <span asp-validation-for="Input.ContactPersoon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Adres"></label>
                <p>
                    <input asp-for="Input.Adres" class="form-control" />
                </p>
                <span asp-validation-for="Input.Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PostCode"></label>
                <input asp-for="Input.PostCode" class="form-control" />
                <span asp-validation-for="Input.PostCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Plaats"></label>
                <p>
                    <input asp-for="Input.Plaats" class="form-control" />
                </p>
                <span asp-validation-for="Input.Plaats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nieuwsbrief" class="control-label"></label>
                <select asp-for="Input.Nieuwsbrief" class="form-control">
                    <option value="true">Ja</option>
                    <option value="false">Nee</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registeren</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
