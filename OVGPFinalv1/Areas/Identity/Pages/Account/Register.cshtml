@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Bedrijf">Bedrijfsnaam</label>
                <input asp-for="Input.Bedrijf" class="form-control" />
                <span asp-validation-for="Input.Bedrijf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ContactPersoon"></label>
                <input asp-for="Input.ContactPersoon" class="form-control" />
                <span asp-validation-for="Input.ContactPersoon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Adres"></label>
                <input asp-for="Input.Adres" class="form-control" />
                <span asp-validation-for="Input.Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PostCode"></label>
                <input asp-for="Input.PostCode" class="form-control" />
                <span asp-validation-for="Input.PostCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Plaats"></label>
                <input asp-for="Input.Plaats" class="form-control" />
                <span asp-validation-for="Input.Plaats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
