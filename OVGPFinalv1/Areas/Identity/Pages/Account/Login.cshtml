@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>

    h3 {
        color: #00BDF3;
    }
    label{
        color:blue;
    }

</style>
<h3 class="top-space" style="color: #00BDF3;text-align:center;">Loginpagina</h3>
<div class="wrapper">
    <div class="formContent">
        <section>
            <form id="account" method="post">
                <div class="form-group">
                    <label asp-for="Input.Email" style="color:blue;">Email</label>
                    <input asp-for="Input.Email"  class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" style="color:blue;">Wachtwoord
                        <input asp-for="Input.Password"  class="form-control" />
                    </label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe"><input asp-for="Input.RememberMe" />Onthouden</label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                        <a id="forgot-password" class="btn btn-primary" asp-page="./ForgotPassword">Wachtwoord vergeten?</a>
                        @*<a asp-page="./Register" class="btn btn-primary" asp-route-returnUrl="@Model.ReturnUrl">Lid worden</a>*@
                </div>
            </form>
        </section>
    </div>
