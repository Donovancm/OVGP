@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model OVGPFinalv1.Models.Content
@{
    ViewData["Title"] = "Details";
}
<style>

    h3 {
        color: #00BDF3;
    }
</style>
<h3>Informatie</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostedDate)
        </dd>
        @*<dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.NamePostedUser)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.NamePostedUser)
            </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContentType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContentURL)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ContentURL != null && Model.ContentType == "VID")
            {
                <iframe class="embed-responsive-item" src="@Model.ContentURL" width="480" height="240" frameborder="0" allowfullscreen></iframe>
            }
            else if (Model.ContentURL != null && Model.ContentType == "IMG")
            {
                <object data="@Model.ContentURL" class="embed-responsive-item" width="480" height="270"></object>
            }
        </dd>
        @if (Model.CommentsAllowed == true)
        {
            //partial view doen
        }
        @*<dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ContentFile)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ContentFile)
            </dd>*@
    </dl>
</div>
<div>
    @if (User.IsInRole("Beheerder"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ContentId">Aanpassen</a>
        <a asp-action="Delete" asp-route-id="@Model.ContentId">Verwijderen</a>
        <a asp-action="Index">Terug naar nieuwspagina</a>
    }
    else
    {
        <a asp-action="Index">Terug naar nieuwspagina</a>
    }
</div>