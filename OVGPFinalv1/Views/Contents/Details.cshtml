@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model OVGPFinalv1.Models.Content
@{
    ViewData["Title"] = "Details";
}
<style>

    h3 {
        color: #00BDF3;
    }
</style>
<h3>Informatie</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContentType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContentURL)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ContentURL != null && Model.ContentType == "VID")
            {
                <iframe class="embed-responsive-item" src="@Model.ContentURL" width="480" height="240" frameborder="0" allowfullscreen></iframe>
            }
            else if (Model.ContentURL != null && Model.ContentType == "IMG")
            {
                <object data="@Model.ContentURL" class="embed-responsive-item" width="480" height="270"></object>
            }
        </dd>
        @if (Model.CommentsAllowed == true)
        {
            //partial view doen
        }
    </dl>
</div>
<div>
    @if (User.IsInRole("Beheerder"))
    {
        <form>
            <button class="btn btn-grey m-right btn-sm" asp-action="Index">Terug naar nieuwspagina</button>
            <button class="btn btn-grey m-right btn-sm" asp-action="Edit" asp-route-id="@Model.ContentId">Edit</button>
            <button class="btn btn-grey m-right btn-sm" asp-action="delete" asp-route-id="@Model.ContentId">Delete</button>
        </form>
    }
    else
    {
        <form>
            <button class="btn btn-grey m-right btn-sm" asp-action="Index">Terug naar nieuwspagina</button>
        </form>
    }
    </div>