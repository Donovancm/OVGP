@model OVGPFinalv1.Models.Content

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    h3 {
        color: #00BDF3;
    }
</style>

<h3>Verwijderen van nieuwsbericht</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NamePostedUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NamePostedUser)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContentType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContentType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContentURL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContentURL)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContentFile)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContentFile)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ContentId" />
        <button class="btn btn-grey m-right btn-sm" asp-action="Index">Terug naar nieuwspagina</button>
        <button class="btn btn-grey m-right btn-sm" asp-action="Edit" asp-route-id="@Model.ContentId">Edit</button>
        <button class="btn btn-grey m-right btn-sm" asp-action="delete" asp-route-id="@Model.ContentId">Delete</button>
    </form>
</div>
