@model OVGPFinalv1.Models.Content
@{
    ViewData["Title"] = "CreateWithUrl";
}
<h3>Aanmaken van nieuwsbericht</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateWithFile" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Titel</label>
                <p>
                    <input asp-for="Title" class="form-control" />
                </p>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label">Beschrijving</label>
                <textarea asp-for="Text" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ContentType" class="control-label">Nieuws media type</label>
                <select asp-for="ContentType" class="form-control">
                    <option value="IMG">IMG</option>
                    <option value="VID">VID</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ContentURL" class="control-label">Nieuws media URL</label>
                <input asp-for="ContentURL" class="form-control" />
                <span asp-validation-for="ContentURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aanmaken nieuwsbericht" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>