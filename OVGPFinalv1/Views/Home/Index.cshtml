@model IEnumerable<OVGPFinalv1.Models.Content>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <h3 class="text-center">Wie zijn wij?</h3>
    <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/ScMzIvxBSi4" allowfullscreen></iframe>
    </div>
    <br>
    <hr class="style1">
    <br>

    <h3 class="text-center">Nieuws</h3>
    <div class="news-items">
        <div class="row justify-content-center">
            @foreach (var item in Model.Reverse())
            {
            <div class="card col-md-5 bg-light" id="btn_card1_card">
                @if (item.ContentURL == null)
                {
                    <object data="@item.ContentFile" class="embed-responsive-item card-img-top card-img" alt="Card image"></object>
                }
                else if (item.ContentURL != null && item.ContentType == "VID")
                {
                    <iframe class="embed-responsive-item card-img-top" src="@item.ContentURL" height="360" alt="Card image" allowfullscreen></iframe>
                }
                else if (item.ContentURL != null && item.ContentType == "IMG")
                {
                    <object data="@item.ContentURL" class="embed-responsive-item card-img-top card-img" alt="Card image"></object>
                }
                <div class="card-body" id="card1_radio_body">
                    <h4 class="card-title"><em>@Html.ActionLink(item.Title, "Details", "Contents", new { id = item.ContentId })</em></h4>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Text)</p>
                </div>
                <div class="card-footer">
                    <p>
                        @Html.DisplayFor(modelItem => item.PostedDate)
                    </p>
                </div>
            </div>
            }
        </div>
    </div>
</div>

