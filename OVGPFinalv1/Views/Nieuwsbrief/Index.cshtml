                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostedDate)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.NieuwsbriefId">Edit</a>*@ |
                <a asp-action="Details" asp-route-id="@item.NieuwsbriefId">Details</a> |
