@model IEnumerable<OVGPFinalv1.Models.Nieuwsbrief>


<h3>Archief van nieuwsbrieven</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <input type="submit" value="Aanmaken nieuwsbericht" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Onderwerp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Onderwerp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedDate)
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.NieuwsbriefId">Edit</a>*@
                    <form>
                        <button class="btn btn-grey m-right btn-sm" asp-action="Details" asp-route-id="@item.NieuwsbriefId">Details</button>
                        <button class="btn btn-grey m-right btn-sm" asp-action="delete" asp-route-id="@item.NieuwsbriefId">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

